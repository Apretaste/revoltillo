<div class="row">
	<div class="col s12" id="article-details">
		<% if(ad.image_urls) { %>
		<div id="article-img" class="valign-wrapper">
			<img class="responsive-img" src="<%=ad.image_urls[0] %>">
		</div>
		<% } %>

		<div id="article-content">
			<span class="result-title">
				<% if(ad.price != 0) { %>
					<%= ad.price %> -
				<% } %>
				<%= ad.title %>
		</span>
			<br>			

			<p><%= ad.publish_date %></p>
			<p><%= ad.description %></p>

			<% if(ad.name) { %>
				<p class="contact-name"><i class="material-icons amber-text text-darken-1">person</i> <%= ad.name %> </p>
			<% } %>
			<% if(ad.email) { %>
				<p class="contact-email"><i class="material-icons blue-text text-accent-4">email</i> <%= ad.email %> </p>
			<% } %>
			<% if(ad.phone) { %>
				<p class="contact-phone"><i class="material-icons green-text text-darken-2">phone</i> <%= ad.phone %> </p>
			<% } %>
		</div>
	</div>

	<div class="fixed-action-btn" onclick="apretaste.send({'command': 'REVOLTILLO SEARCH'})">
		<a class="btn-floating btn-large">
			<i class="large material-icons">arrow_back</i>
		</a>
	</div>
</div>