<div class="row">
    <div class="col s12 center">
        <h1 class="black-text"><%= header %></h1>
        <i class="material-icons large"><%= icon %></i>
        <p><%= text %></p>
        <% if(typeof button != "undefined"){ %>
            <a class="waves-effect waves-light btn white-text" href="#!"
               onclick="<%= typeof query != "undefined" ? 'searchData(query)' : "apretaste.send({'command': '" + button['href'] + "'})" %>">
                <%= button['caption'] %>
            </a>
        <% } %>
    </div>
</div>